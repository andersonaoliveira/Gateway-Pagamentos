
<div class='container-fluid'>
  <% if card_banner.errors.any?%>
    <span>Verifique os seguintes erros:</span>
    <ul>
    <% @card_banner.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>
</div>

<%= form_with(model: card_banner) do |form| %>
  <label class="ls-label col-md-4">
    <%= form.label :name, 'Nome' %>
    <p class="ls-label-info">Digite o nome da bandeira</p>
    <%= form.text_field(:name) %>
  </label>
  <label class="ls-label col-md-4">
    <%= form.label :icon, 'Ícone' %>
    <p class="ls-label-info">Escolha o ícone da bandeira</p>
    <%= form.file_field(:icon) %>
  </label>
  <label class="ls-label col-md-4">
    <%= form.label :percentual_tax, 'Taxa da bandeira' %>
    <p class="ls-label-info">Taxa cobrada pela bandeira em %</p> 
    <%= form.number_field(:percentual_tax) %>
  </label>
  <label class="ls-label col-md-4">
    <%= form.label :max_tax, 'Valor máximo da taxa' %>
    <p class="ls-label-info">O valor máximo da taxa cobrada pela bandeira em R$</p>
    <%= form.number_field(:max_tax) %> 
  </label>
  <label class="ls-label col-md-4">
    <%= form.label :max_instalments, 'Número máximo de parcelas' %>
    <p class="ls-label-info">Número máximo de parcelas oferecido pela bandeira</p>
    <%= form.number_field(:max_instalments) %>
  </label>
  <label class="ls-label col-md-4">
    <%= form.label :discount, 'Desconto para compras à vista' %>
    <p class="ls-label-info">Desconto oferecido pela bandeira para compras à vista em R$</p>
    <%= form.number_field(:discount) %>
  </label>
  <div class="ls-actions-btn">
    <%= form.submit 'Salvar', class: 'ls-btn-lg' %>
  </div>
<% end %>
