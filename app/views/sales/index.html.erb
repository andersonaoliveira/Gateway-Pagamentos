
<h1 class="ls-title-intro ls-ico-cart">PROMOÇÕES</h1>

<% if @sales.any? %>
  <div class="ls-box-filter">
    <%= form_with url: search_sales_path, method: :get do %>
      <%= label_tag :q, 'Buscar promoção:' %>
      <%= text_field_tag :q %>
      <%= submit_tag 'Pesquisar', class: "ls-btn"%>
    <% end %>
  </div>
  <%= render "sales/sales" %>
<% else %>
  <div class="ls-box">
    <h3 style="color:gray">Não existem promoções cadastradas no sistema</h3>
  </div>
<% end %>

